using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Lab1
{
    class Program
    {
        static void Main(string[] args)
        {
            int k=0;
            IFile file;
            IFile clonedFile;
            Console.Write("Enter number of files: ");
            int n=Convert.ToInt32(Console.ReadLine());
            int i=1;
            while(i<=n)
            {
                Console.Write("Enter name of {0} file: ", i);
                string nm = Console.ReadLine();
                Console.Write("Enter extension of {0} file: ", i);
                k = Convert.ToInt32(Console.ReadLine());
                switch(k)
                {
                    case 1:
                        {
                            file = new Filetxt(nm);
                            clonedFile = file.Clone();
                            clonedFile.GetInfo();
                            Console.WriteLine();
                            break;
                        }
                    case 2:
                        {
                            file = new Filertf(nm);
                            clonedFile = file.Clone();
                            clonedFile.GetInfo();
                            Console.WriteLine();
                            break;
                        }
                    case 3:
                        {
                            file = new Filedoc(nm);
                            clonedFile = file.Clone();
                            clonedFile.GetInfo();
                            Console.WriteLine();
                            break;
                        }
                    case 4:
                        {
                            file = new Filejpeg(nm);
                            clonedFile = file.Clone();
                            clonedFile.GetInfo();
                            Console.WriteLine();
                            break;
                        }
                }
                i++;
            }
            Console.Read();
        }

    }

    interface IFile
    {
        IFile Clone();
        void GetInfo();
    }

    class Filetxt : IFile
    {
        string Name;
        string Res;
        public Filetxt(string nm)
        {
            Name = nm;
            Res = "txt";
        }

        public IFile Clone()
        {
            return new Filetxt(this.Name);
        }
        public void GetInfo()
        {
            Console.WriteLine("Created file {0}.{1}", Name, Res);
        }
    }
    class Filejpeg : IFile
    {
        string Name;
        string Res;
        public Filejpeg(string nm)
        {
            Name = nm;
            Res = "jpeg";
        }

        public IFile Clone()
        {
            return new Filejpeg(this.Name);
        }
        public void GetInfo()
        {
            Console.WriteLine("Created file {0}.{1}", Name, Res);
        }
    }
    class Filedoc : IFile
    {
        string Name;
        string Res;
        public Filedoc(string nm)
        {
            Name = nm;
            Res = "doc";
        }

        public IFile Clone()
        {
            return new Filedoc(this.Name);
        }
        public void GetInfo()
        {
            Console.WriteLine("Created file {0}.{1}", Name, Res);
        }
    }
    class Filertf : IFile
    {
        string Name;
        string Res;
        public Filertf(string nm)
        {
            Name = nm;
            Res = "rtf";
        }

        public IFile Clone()
        {
            return new Filertf(this.Name);
        }
        public void GetInfo()
        {
            Console.WriteLine("Created file {0}.{1}", Name, Res);
        }
    }


}
